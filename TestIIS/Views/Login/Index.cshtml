@{
    Layout = null;
    ViewBag.Title = "Đăng nhập hệ thống bóng đá";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to bottom right, rgba(0, 128, 0, 0.6), rgba(0, 50, 0, 0.7)), url('https://images.unsplash.com/photo-1508609349937-5ec4ae374ebf?auto=format&fit=crop&w=1950&q=80');
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', sans-serif;
            color: #fff;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 40px;
            width: 380px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

            .login-card h2 {
                text-align: center;
                margin-bottom: 25px;
                font-weight: bold;
            }

            .login-card label {
                font-weight: 500;
            }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            width: 100%;
            border-radius: 10px;
            font-weight: 600;
            background-color: #28a745;
            border: none;
        }

            .btn-primary:hover {
                background-color: #218838;
            }

        .logo-ball {
            text-align: center;
            font-size: 60px;
            color: #ffc107;
            margin-bottom: 10px;
        }

        .footer {
            text-align: center;
            margin-top: 15px;
            color: #eee;
            font-size: 0.9rem;
        }

        select.form-control {
            background-color: #fff;
            color: #000;
        }

        .alert {
            background-color: rgba(255, 0, 0, 0.8);
            color: #fff;
            border: none;
            border-radius: 10px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="login-card">
        <div class="logo-ball">
            <i class="bi bi-balloon-fill"></i>
        </div>
        <h2>Đăng nhập hệ thống</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post">
            <div class="form-group mb-3">
                <label>Tên đăng nhập</label>
                <input type="text" name="username" class="form-control" placeholder="Nhập tên đăng nhập..." required />
            </div>

            <div class="form-group mb-3">
                <label>Mật khẩu</label>
                <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu..." required />
            </div>

            <div class="form-group mb-4">
                <label>Chọn máy chủ</label>
                <select name="selectedServer" class="form-control" required>
                    <option value="SV1">🏟️ Toàn cục</option>
                    <option value="SV2">🏟️ SV Hồ Chí Minh</option>
                    <option value="SV3">🏟️ SV Hà Nội</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
            </button>
        </form>

        <div class="footer">
            © @DateTime.Now.Year - Hệ thống quản lý giải bóng đá quốc gia 🇻🇳
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
