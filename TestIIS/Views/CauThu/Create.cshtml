@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thêm cầu thủ";
    ViewBag.ActiveMenu = "CauThu";
}

<h3>Thêm cầu thủ</h3>
<form method="post" class="mt-3">
    <div class="mb-3">
        <label>Mã cầu thủ</label>
        <input type="text" name="maCT" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Họ tên</label>
        <input type="text" name="hoTen" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Mã đội bóng</label>
        <input type="text" name="maDB" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a href="/CauThu/Index" class="btn btn-secondary">Quay lại</a>
</form>
