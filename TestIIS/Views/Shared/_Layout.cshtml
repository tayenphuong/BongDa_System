@{
    Layout = null;
    var title = ViewBag.Title ?? "Hệ thống quản lý cầu thủ";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #212529;
            color: white;
            padding-top: 20px;
        }

            .sidebar h4 {
                color: #ffc107;
            }

            .sidebar a {
                color: #ccc;
                text-decoration: none;
                display: block;
                padding: 10px 15px;
                border-radius: 8px;
                margin: 5px 10px;
                font-size: 15px;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #495057;
                    color: white;
                }

        .content {
            padding: 20px;
        }

        footer {
            background-color: #212529;
            color: #aaa;
            text-align: center;
            padding: 10px;
            border-top: 1px solid #444;
        }

        .navbar {
            background-color: #fff;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 600;
            color: #343a40 !important;
        }

        .login-btn {
            font-weight: 500;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- Sidebar -->
            <div class="col-auto col-md-3 col-lg-2 sidebar">
                <h4 class="text-center mb-4">⚽ Quản lý hệ thống</h4>
                <a href="/CauThu/Index" class="@(ViewBag.ActiveMenu == "CauThu" ? "active" : "")">
                    <i class="bi bi-people"></i> Quản lý cầu thủ
                </a>
                <a href="/DoiBong/Index" class="@(ViewBag.ActiveMenu == "DoiBong" ? "active" : "")">
                    <i class="bi bi-shield"></i> Quản lý đội bóng
                </a>
                <a href="/TranDau/Index" class="@(ViewBag.ActiveMenu == "TranDau" ? "active" : "")">
                    <i class="bi bi-shield"></i> Quản lý trận đấu
                </a>
                <a href="#"><i class="bi bi-bar-chart"></i> Báo cáo & Thống kê</a>
                <a href="#"><i class="bi bi-gear"></i> Cài đặt</a>
            </div>

            <!-- Main Content -->
            <div class="col py-3 content">
                <!-- Navbar -->
                <nav class="navbar navbar-expand-lg navbar-light rounded mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/">Hệ thống quản lý</a>

                        <div class="d-flex">
                            @if (Session["User"] == null)
                            {
                                <a href="/Login/Index" class="btn btn-outline-primary login-btn">
                                    <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                                </a>
                            }
                            else
                            {
                                <a href="/Login/Logout" class="btn btn-outline-danger logout-btn">
                                    <i class="bi bi-box-arrow-right"></i> Đăng xuất (@Session["User"])
                                </a>
                            }
                        </div>
                    </div>
                </nav>

                <!-- Main Content Area -->
                <main>
                    @RenderBody()
                </main>

                <!-- Footer -->
                @*<footer class="mt-5">
                    <small>© @DateTime.Now.Year - Hệ thống quản lý cầu thủ & đội bóng | Thiết kế bởi Phương 💙</small>
                </footer>*@
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
